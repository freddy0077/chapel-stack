                      <td className="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <Link href="/dashboard/admin/roles/diocese-admin" className="text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300">
                          Edit
                        </Link>
                      </td>
                    </tr>
                    <tr>
                      <td className="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                        Regional Manager
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                        Region
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                        7
                      </td>
                      <td className="px-6 py-4 whitespace-nowrap text-sm font-medium">
                        <Link href="/dashboard/admin/roles/regional-manager" className="text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300">
                          Edit
                        </Link>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </CardContent>
            <CardFooter>
              <Link 
                href="/dashboard/admin/roles" 
                className="w-full inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
              >
                Manage All Roles
              </Link>
            </CardFooter>
          </Card>
        </div>
      )}

      {/* Logs Section */}
      {activeSection === 'logs' && (
        <div className="grid grid-cols-1 gap-6">
          <Card className="bg-white dark:bg-gray-800 border-gray-100 dark:border-gray-700 hover:shadow-md transition-shadow">
            <CardHeader>
              <CardTitle>System Activity Logs</CardTitle>
              <CardDescription>Recent activity across your organization</CardDescription>
            </CardHeader>
            <CardContent>
              <div className="space-y-4">
                {[1, 2, 3, 4, 5].map((i) => (
                  <div key={i} className="flex items-center p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                    <div className="p-2 bg-blue-50 dark:bg-blue-900/30 rounded-full mr-3">
                      <DocumentChartBarIcon className="h-5 w-5 text-blue-600 dark:text-blue-400" />
                    </div>
                    <div className="flex-1">
                      <p className="text-sm font-medium text-gray-900 dark:text-white">
                        User permission updated
                      </p>
                      <p className="text-xs text-gray-500 dark:text-gray-400">
                        Admin user modified permissions for role: Branch Manager
                      </p>
                    </div>
                    <div className="text-xs text-gray-500 dark:text-gray-400">
                      {`${i}h ago`}
                    </div>
                  </div>
                ))}
              </div>
            </CardContent>
            <CardFooter>
              <Link 
                href="/dashboard/admin/logs" 
                className="w-full inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
              >
                View All Activity Logs
